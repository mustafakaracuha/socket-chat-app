{
    "version": 2,
    "builds": [
        {
            "src": "chat-server/api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "chat-client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/socket.io",
            "dest": "/chat-server/api/index.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/chat-server/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/chat-client/$1"
        }
    ]
}
